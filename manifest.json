{
    "manifest_version": 3,
    "name": "PrettyPage",
    "description": "Prettify your pages!",
    "version": "1.0",

    "background":{
        "service_worker": "background.js"
    },

    "permissions": ["storage", "activeTab", "scripting"],

    "action": {
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "/images/PrettyPage.png",
        "32": "/images/PrettyPage.png"

    }
}